<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_dice0312"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wins_text"
            android:layout_width="115dp"
            android:layout_height="61dp"
            android:layout_marginLeft="5dp"
            android:textColor="#090909"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/your_targent"
            android:layout_width="101dp"
            android:layout_height="61dp"
            android:layout_marginLeft="32dp"
            android:textColor="#090909"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Humanscore"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:textColor="#090909"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Human Player :"
        android:textColor="#090909"
        android:textSize="23dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="71dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice5" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Computer Player :"
        android:textColor="#070707"
        android:textSize="23dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice1" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice2" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice3" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice4" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/throw_button"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:backgroundTint="#13635C"
            android:fontFamily="@font/candal"
            android:text="Throw"
            android:textColor="#FDFDFD"
            android:textSize="20sp" />

        <Button
            android:id="@+id/score_button"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:backgroundTint="#13635C"
            android:fontFamily="@font/candal"
            android:text="Score"
            android:textColor="#FDFDFD"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/target_button"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:backgroundTint="#1D6059"
        android:text="Set Your Target"
        android:textColor="#FBFBFB"
        android:textSize="20sp" />


</LinearLayout>