<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_dice0312potrat"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wins_text"
            android:layout_width="115dp"
            android:layout_height="61dp"
            android:layout_marginLeft="5dp"
            android:textColor="#090909"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/your_targent"
            android:layout_width="101dp"
            android:layout_height="61dp"
            android:layout_marginLeft="180dp"
            android:textColor="#090909"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Humanscore"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:textColor="#090909"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Human Player :"
            android:textColor="#090909"
            android:textSize="26dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="71dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice5" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="224dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Computer Player :"
            android:textColor="#090909"
            android:textSize="26dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice1" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice2" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice3" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice4" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="72dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/dice5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/throw_button"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:backgroundTint="#13635C"
            android:fontFamily="@font/candal"
            android:text="Throw"
            android:textColor="#FDFDFD"
            android:textSize="20sp" />

        <Button
            android:id="@+id/score_button"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:backgroundTint="#13635C"
            android:fontFamily="@font/candal"
            android:text="Score"
            android:textColor="#FDFDFD"
            android:textSize="20sp" />

        <Button
            android:id="@+id/target_button"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:backgroundTint="#13635C"
            android:fontFamily="@font/candal"
            android:text="Target"
            android:textColor="#FDFDFD"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>